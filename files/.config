# MOTD config and settings file
# please edit your settings here, use 0 = off and 1 = on

# * activate dynamic header?
#* set config(header_dyn) 0

# * display variable statement to users?
set config(variable_statements) 1

# * name of statement file
set config(file_statement) "statement"

# * default statement
set config(statement_line1) "  This is a private system that you are not to give out access to anyone"
set config(statement_line1) "                      without permission from an admin!"

# * display state of services too root?
set config(display_services) 1

# * set Name and pid name of services, eg: MySQL -> mysqld
# * you can use two lines.
array set services_line_1 { Apache2 apache2 MySQL mysqld SSH sshd ProFTPd proftpd }
array set services_line_2 { PortSentry portsentry Fail2Ban fail2ban }

# * Show failed logins (only root)
set config(display_failed_logins) 1

# * Only show MOTD when user is in home dir?
set config(display_only_home) 1

# * Maximum String length
set config(maxstringlenght) 110

